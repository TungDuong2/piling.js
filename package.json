{
  "name": "piling.js",
  "version": "0.2.0",
  "description": "A WebGL-based Library for Visual Piling/Stacking",
  "author": [
    {
      "name": "Xinyi Zhou"
    },
    {
      "name": "Fritz Lekschas",
      "email": "service@lekschas.de",
      "url": "https://lekschas.de"
    }
  ],
  "keywords": [
    "piling",
    "stacking",
    "visualization",
    "webgl"
  ],
  "license": "MIT",
  "main": "dist/piling.js",
  "module": "src/index.js",
  "files": [
    "src/*",
    "dist/piling.js",
    "dist/piling.min.js",
    "dist/piling-library.js",
    "dist/piling-library.min.js",
    "dist/piling-renderer.js",
    "dist/piling-renderer.min.js",
    "dist/piling-aggregator.js",
    "dist/piling-aggregator.min.js"
  ],
  "scripts": {
    "build": "rm -rf dist/*; rm -rf examples-build/*; rollup -c; webpack --config ./webpack.config.js --mode production; ./copy-example-data.sh; echo \"piling.js.org\" >> CNAME",
    "deploy": "npm run build; gh-pages -d examples-build -t --git git",
    "lint": "eslint src examples rollup.config.js webpack.config.js",
    "precommit": "NODE_ENV=production lint-staged",
    "prepublishOnly": "npm run test",
    "prerelease": "npm run build; zip -r dist.zip dist",
    "pretest": "npm run lint",
    "start": "webpack-dev-server --config ./webpack.config.js --mode development --open",
    "test": "rollup -c; webpack --config ./webpack.config.js",
    "watch": "rollup -cw"
  },
  "lint-staged": {
    "*.js": [
      "pretty-quick --staged",
      "eslint --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run precommit"
    }
  },
  "prettier": {
    "singleQuote": true
  },
  "dependencies": {
    "deep-equal": "^1.1.0",
    "ndarray": "^1.0.18",
    "ndarray-convolve": "^2.0.0",
    "normalize-wheel": "^1.0.1",
    "pixi.js": "^5.1.5",
    "pub-sub-es": "^1.2.1",
    "rbush": "^3.0.1",
    "redux": "^4.0.4",
    "redux-freeze": "^0.1.7",
    "regl": "^1.3.13",
    "with-raf": "^1.1.1"
  },
  "peerDependencies": {
    "pub-sub-es": "^1.2.1",
    "pixi.js": "^5.1.5",
    "regl": "^1.3.13"
  },
  "devDependencies": {
    "@babel/core": "^7.6.2",
    "@babel/plugin-transform-regenerator": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.6.2",
    "@babel/polyfill": "^7.6.0",
    "@babel/preset-env": "^7.6.2",
    "@babel/runtime": "^7.6.2",
    "acorn": "^7.1.0",
    "babel-loader": "^8.0.4",
    "babel-plugin-lodash": "^3.3.4",
    "browser-env": "^3.2.5",
    "d3-scale-chromatic": "^1.5.0",
    "eslint": "^6.4.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.3.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react": "^7.11.1",
    "eslint-plugin-react-hooks": "^1.7.0",
    "esm": "^3.0.84",
    "gh-pages": "^2.1.0",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^3.0.5",
    "lint-staged": "^9.3.0",
    "prettier": "^1.15.2",
    "pretty-quick": "^1.8.0",
    "rollup": "^1.21.4",
    "rollup-plugin-babel": "^4.0.3",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-filesize": "^6.2.0",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-terser": "^5.1.2",
    "rollup-plugin-visualizer": "^2.6.0",
    "webpack": "^4.41.0",
    "webpack-cli": "^3.3.9",
    "webpack-dev-server": "^3.8.1"
  },
  "homepage": "https://github.com/flekschas/piling.js",
  "repository": {
    "type": "git",
    "url": "git://github.com/flekschas/piling.js.git"
  },
  "bugs": {
    "url": "https://github.com/flekschas/piling.js/issues"
  }
}
